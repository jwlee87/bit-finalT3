<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/jsp">       <!-- WebContent 폴더 아래 decorators라는 폴더를 default directory로 한다.  -->
    
    <excludes>
		<pattern>/*/quiz/write*</pattern>
	</excludes>
    
    <excludes>
		<pattern>/*/quiz/update*</pattern>
	</excludes>
    <excludes>
		<pattern>/*/quiz/quizSolve*</pattern>
	</excludes>
	
	<excludes>
		<pattern>/*/*Detail.*</pattern>
	</excludes>
    
    <!-- index.html로 url 패턴이 들어오면 main.jsp를 실행한다  -->
    <decorator name="group" page="group/groupList.jsp">       
        <pattern>/*/group*</pattern>                     	
    </decorator>
    
    <decorator name="card" page="decorators/layout.jsp">       
        <pattern>/*/card*</pattern>                     	
    </decorator>
    
    <decorator name="quiz" page="decorators/layout.jsp">       
        <pattern>/*/quiz/list*</pattern>                     	
    </decorator>
    
    <decorator name="main" page="decorators/layout.jsp">       
        <pattern>/*/main*</pattern>                     	
    </decorator>
    
</decorators>
